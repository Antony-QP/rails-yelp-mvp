<div class="container text-center">
    <%= simple_form_for @restaurant do |f|%>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-secondary black" %>
    <% end %>
</div>
