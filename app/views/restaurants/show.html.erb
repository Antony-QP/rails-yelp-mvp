<div class="card">
  <div class="card-body text-center">
    <ul>
      <li><%= @restaurant.name %></li>
      <li>Address: <%= @restaurant.address %></li>
      <li>Tel: <%= @restaurant.phone_number %></li>
      <li><%= @restaurant.category %></li>
      <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
    <%= link_to 'Back', restaurants_path %> |
    <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
    </ul>
  </div>
  
  <ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
    <%= link_to "Remove", review_path(review), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-secondary" %>
  <% end %>
</ul>
</div>



